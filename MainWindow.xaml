                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Pulse Animasyonu -->
        <Storyboard x:Key="PulseAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" 
                           From="0.3" To="1" Duration="0:0:1" AutoReverse="True"/>
        </Storyboard>
        
        <!-- Glow Animasyonu -->
